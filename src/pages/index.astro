---
import Layout from "../layouts/Layout.astro";

const card = [
    {
        id: "0",
        title: "Государственная прокуратура",
        background: "/public/prosecutor.jpeg",
    },
    {
        id: "1",
        title: "Судебная система",
        background: "/public/jud.jpeg",
    },
    {
        id: "2",
        title: "Адвокатура штата",
        background: "/public/comey.jpeg",
    },
];
---

<Layout title="Government">
    <div class="content-container">
        {
            card.map((item) => (
                <div class="card-content" data-idx={item.id}>
                    <div class="card-content-name">
                        <img src={item.background} alt="" />
                        <p>{item.title}</p>
                    </div>
                </div>
            ))
        }
    </div>
</Layout>

<style lang="scss">
    .content-container {
        display: grid;
        grid-template-columns: repeat(3, 2fr);
    }

    .card-content {
        margin: 0 auto;
        color: rgba(20, 17, 17, 0.75);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        width: 450px;
        height: 250px;
        transition: ease 0.5s;
        box-shadow: 0px 10px 30px 5px rgba(66, 65, 65, 0.5);
        filter: grayscale(0.7);
        cursor: pointer;

        & img {
            position: absolute;
            width: 450px;
            height: 250px;
        }

        &-name {
            position: relative;
            display: flex;
            align-items: flex-end;
            height: 100%;

            p {
                background: rgba(88, 87, 87, 0.5);
                padding: 5px 10px;
                font-size: 21px;
                font-weight: 300;
                z-index: 10;
            }
        }

        &:hover {
            filter: none;
            transition: ease 0.5s;
            color: white;
            font-weight: 300;
        }
    }
</style>
